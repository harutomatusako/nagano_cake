<h3>商品一覧</h3>
<table class="table table-hover table-inverse">
<thead>
  <tr>
   <th>商品ID</th>
   <th>会員一覧</th>
   <th>注文履歴一覧</th>
   <th>ジャンル一覧</th>
   <th>ステータス</th>
  </tr>
 </thead>

 <tbody>
 <% @items.each do |item| %>
  <tr>
   <td><%= item.id %></td>
   <td><%= item.name %></td>
   <td><%= item.price %></td>
   <td><%= item.genre.name %></td>
   <% if item.is_active %>
   <td>販売中</td>
   <% else %>
   <td>販売停止中</td>
   <% end %>
  </tr>
 <% end %>
 </tbody>
 </table>
