<h3>商品詳細</h3>
 <table>
     
  <%= attachment_image_tag @item, :image,:fill, 100, 100 %>
  <tr>
   <th>商品名</th>
   <td><%= @item.name %></td>
  </tr>
  
  <tr>
   <th>商品説明</th>
   <td><%= @item.introduction %></td>
  </tr>
  
  <tr>
   <th>税込み価格(税抜き価格)</th>
   <td><%= (@item.price*1.1).round %>(<%= @item.price %>)</td>
  </tr>
  
  <tr>
   <th>販売ステータス</th>
   <% if @item.is_active %>
   <td>販売中</td>
   <% else %>
   <td>販売停止中</td>
   <% end %>
  </tr>
  
  <tr>
  <th><button type="button" class="btn btn-success"><%= link_to '編集する',edit_admin_item_path(@item.id) %></button></th>
  
  </tr>
 </table>
  