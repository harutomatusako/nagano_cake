<h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
<td>会員ID</td>
<td><%= @customer.id %></td>

<%= form_with model:@customer,url: admin_customer_path(@customer.id), local:true do |f| %>

<div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
 </div>
 
<div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
 </div>
 
<div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
</div>

<div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true %>
</div>
 
<div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true %>
</div>

<div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email, autofocus: true %>
</div>

<div>会員ステータス
   <%= f.label :有効 %>
   <%= f.radio_button :is_active, :true %>
  
   <%= f.label :退会 %>
   <%= f.radio_button :is_active, :false %>
</div>
  
 
<div class="form-group">
    <%= f.submit '変更を保存' %>
</div>
<% end %>
