<h1>会員情報編集</h1>

<%= form_with model:@customer,url: customers_path(@customer), local:true do |f| %>

<div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
 </div>
 
<div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
 </div>
 
<div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
</div>

<div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true %>
</div>
 
<div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true %>
</div>

<div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email, autofocus: true %>
</div>


 
<div class="form-group">
    <%= f.submit '変更を保存' %>
</div>
<% end %>
