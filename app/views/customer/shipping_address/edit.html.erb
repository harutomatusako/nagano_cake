<h1>配送先編集</h1>
<%= form_with model:@shipping_address,url: "/shipping_address/#{@shipping_address.id}", local:true do |f| %>

<div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
</div>

<div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true %>
</div>
<div class="field">
    <%= f.label "宛名" %>
    <%= f.text_field :name, autofocus: true %>
</div>

<div class="form-group">
    <%= f.submit '変更内容を保存' %>
</div>

<% end %>