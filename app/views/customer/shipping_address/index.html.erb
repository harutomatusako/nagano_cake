<h1>配送先一覧</h1>
<%= form_with model: @shipping_address,url: shipping_address_index_path, local:true do |f| %>
  <div class="field">
    <%= f.label "郵便番号"  %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "住所"  %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "宛名"  %><br />
    <%= f.text_field :name, autofocus: true %>
  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>
 <% end %>

 <table class="table table-hover table-inverse">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    
 <tbody>
 <% @shipping_addresses.each do |shipping_address| %>
 <tr> 
     <th><%= shipping_address.postal_code %></th>
     <th><%= shipping_address.address %></th>
     <th><%= shipping_address.name %></th>
     <th><%= link_to "編集する",edit_shipping_address_path(shipping_address.id) %></th>
     <th><%= link_to "削除する",shipping_address_path(shipping_address.id),method: :delete %></th>
 </tr>
 <% end %>
 </tbody>

 </table>



