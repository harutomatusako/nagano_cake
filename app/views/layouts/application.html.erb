<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Logo</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li><%= link_to "About", "#",class: "nav-link text-light" %></li>
            <li><%= link_to "商品一覧", "#",class: "nav-link text-light" %></li>
            <li><%= link_to "Books", "#",class: "nav-link text-light" %></li>
            <li><%= link_to "Log out", destroy_admin_admin_session_path,class: "nav-link text-light", method: :delete %></li>
          <% elsif admin_admin_signed_in? %>
            <li><%= link_to "商品一覧", new_admin_admin_registration_path,class: "nav-link text-light" %></li>
            <li><%= link_to "会員一覧", new_admin_admin_registration_path,class: "nav-link text-light" %></li>
            <li><%= link_to "注文履歴一覧", new_admin_admin_session_path,class: "nav-link text-light" %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path,class: "nav-link text-light" %></li>
            <li><%= link_to "ログアウト", destroy_admin_admin_session_path,class: "nav-link text-light", method: :delete %></li>
          <% else %>
            <li><%= link_to "About", new_admin_admin_registration_path,class: "nav-link text-light" %></li>
            <li><%= link_to "商品一覧", new_admin_admin_registration_path,class: "nav-link text-light" %></li>
            <li><%= link_to "新規登録", new_admin_admin_registration_path,class: "nav-link text-light" %></li>
            <li><%= link_to "ログイン", new_admin_admin_session_path,class: "nav-link text-light" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

    </header>
    <%= yield %>
  </body>
</html>
